<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.jst.objects.client.Client" table="client">
        <id column="ClientID" name="id" type="integer">
            <generator class="increment"/>
        </id>
        <property name="arrival" type="date" column="ClientArrivee" />
        <property name="departure" type="date" column="ClientDepart" />
        <property name="name" type="string" column="ClientNom" />
        <property name="firstName" type="string" column="ClientPrenom" />
        <property name="agency" type="string" column="ClientAgence" />
        <property name="company" type="string" column="ClientSociete" />
        <property name="price" type="integer" column="ClientPrix" />
        <property name="codeReservation" type="string" column="ClientCodeReservation" />
    </class>
</hibernate-mapping>
